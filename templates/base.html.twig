<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Adoxia - {% endblock %}</title>

    {#<link rel="stylesheet" href="/assets/css/font-awesome.min.css">#}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

{% if app.user %}
    <body class="bg-gray-100">
    <main class="my-6 mx-36 p-3 bg-white border">
        {% block content %}{% endblock %}
    </main>
    </body>
{% else %}
    <body>
    {% block login %}{% endblock %}
    </body>
{% endif %}
</html>
